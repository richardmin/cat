<header class="navbar navbar-fixed-top navbar-inverse navbar-custom">
  <div class="container">
    <%= link_to "Overwatch Matchmaker", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "User Settings", edit_path%></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <!--<li><%= link_to "Log in", login_path%></li>-->
            <li class="login-dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Log In <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" id="login-dropdown">

                 <%= render "users/sessions/loginform" %>

                <!--<div class="bottom text-center padded button btn">-->
                  <%= link_to "Sign up", new_registration_path(:user), class: "bottom text-center padded button btn" %><br />
                <!--</div>-->
              </ul>

            </li>

      <% end %>

      </ul>
    </nav>
  </div>
</header>